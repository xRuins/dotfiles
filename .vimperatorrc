
"============================
" General
"============================

" コマンドの入力時にIMEを無効化
:style -name commandline-ime chrome://* #liberator-commandline-command input {ime-mode: inactive;}

"============================
" Keybind
"============================

" 選択文字列ののコピーを <C-c> に割り当て
map <C-c> :echo Yank!<CR>Y

" j/k でのスクロール幅を 1行 から 3行 に変更
map j 3<C-e>
map k 3<C-y>

" Backspace に戻るを割り当て
map <BS> <A-Left>

" h/l に戻るや進むを割り当て
map h <A-Left>
map l <A-Right>

" H/L や ← → でタブ移動
map H gT
map L gt
map <Left>  gT
map <Right> gt

" Shift + ← → で現在のタブの位置変更
map <S-Right> :tabmove! +1<CR>
map <S-Left>  :tabmove! -1<CR>


"============================
" Follow hint
"============================

" Follow hint の表示を大文字にする
let g:hi

" Follow hint をアルファベットにする
set hintchars=ifjklasdhguonmerwc

" Follow hint の表示を大きくする
hi Hint z-index:5000; font-size:14px; color:white; background-color:red; border-color:ButtonShadow; border-width:2px; border-style:solid; padding:0px 2px 0px 2px; position:absolute; font-family: Menlo, Consolas, Monaco, monospace; text-transform: uppercase;

"============================
" qmarks
"============================
qmark m https://mail.google.com/
qmark f http://cloud.feedly.com/#latest
qmark p http://getpocket.com/a/queue
qmark k http://wikiwiki.jp/kancolle/
qmark u http://www.ubi.cs.ritsumei.ac.jp/inner/pukiwiki/

" 読み込んだ事を出力
echo ".vimperatorrc loaded."
